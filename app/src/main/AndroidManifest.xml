<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marsshotinteractive.numtar" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/numtar_icon_big_n_01"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Numtar"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Settings"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".HowToPlay"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".NormalMode"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait">

        </activity>

        <activity android:name=".ContinuousMode"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait">

        </activity>

        <activity android:name=".HiddenMode"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait">

        </activity>

    </application>

</manifest>
